<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="65dp"
              android:background="@color/white"
              android:orientation="vertical">


    <RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rg_pager_layout"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_gravity="bottom"
        android:background="#fafafa"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/main_pager_layout"
            style="@style/RadioButtonBottomTab"
            android:checked="true"
            android:drawableTop="@drawable/icon_home"
            android:text="首页" />

        <RadioButton
            android:id="@+id/main_collect_layout"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_message"
            android:text="会员" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="56dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/icon_add"
            android:background="@drawable/correct_oran_sel" />

        <RadioButton
            android:id="@+id/main_message_layout"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_square"
            android:text="消息" />

        <RadioButton
            android:id="@+id/main_personal_layout"
            style="@style/RadioButtonBottomTab"
            android:drawableTop="@drawable/icon_selfinfo"
            android:text="个人" />
    </RadioGroup>

</LinearLayout>